<h1>Listing products</h1>

<%= link_to 'New product', new_product_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @products.each do |p| %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.description %></td>
      <td><%= link_to 'Show', product_path(p) %></td>
      <td><%= link_to 'Edit', edit_product_path(p) %></td>
      <td><%= link_to 'Destroy', product_path(p),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
