<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<h2>Reviews</h2>
<% @product.reviews.each do |r| %>
  <p>
    <strong>Reviewer:</strong>
    <%= r.reviewer %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= r.text %>
  </p>
<% end %>

<h2>Add a review:</h2>
<%= form_for([@product, @product.reviews.build]) do |f| %>
  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>
| <%= link_to 'Edit', edit_product_path(@product) %>
