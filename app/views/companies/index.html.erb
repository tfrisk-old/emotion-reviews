<div class="row">
  <h2>Company listing
    <% if can? :create, Company %>
     <%= link_to 'Add new company', new_company_path, class: 'btn btn-success' %>
    <% end %>
  </h2>
</div>

<div class="company-listing">
  <% @companies.each do |c| %>
    <div class="row">
      <div class="row">
        <h3><%= link_to c.name, company_path(c) %>
        <% if can? :update, c %>
        <%= link_to 'Edit', edit_company_path(c), class: 'btn btn-sm btn-warning' %>
        <% end %>
        <% if can? :destroy, c %>
        <%= link_to 'Delete', company_path(c), class: 'btn btn-sm btn-danger',
            method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </h3>
      </div>
      <p><%= c.description %></p>
    </div>
  <% end %>
</div>
