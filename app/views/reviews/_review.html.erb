<p>
  <strong>Reviewer:</strong>
  <%= review.reviewer %>
</p>

<p>
  <strong>Text:</strong>
  <%= review.text %>
</p>

<% if can? :destroy, review %>
<p>
  <strong>Tags:</strong>
  <%= review.tag_list %>
</p>

<p>
  <%= link_to 'Destroy Review', [review.product, review],
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
<% end %>
