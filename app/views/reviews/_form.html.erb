<%= form_for([@product, @product.reviews.build]) do |f| %>
  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags (separated by comma)" %><br>
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
